@model RecruitCatCardoneNew.Pages.Companies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Company Entry</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.Name" class="control-label"></label>
                <input asp-for="Company.Name" class="form-control" />
                <span asp-validation-for="Company.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.PositionHiring" class="control-label"></label>
                <input asp-for="Company.PositionHiring" class="form-control" />
                <span asp-validation-for="Company.PositionHiring" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MinSalary" class="control-label"></label>
                <input asp-for="Company.MinSalary" class="form-control" />
                <span asp-validation-for="Company.MinSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MaxSalary" class="control-label"></label>
                <input asp-for="Company.MaxSalary" class="form-control" />
                <span asp-validation-for="Company.MaxSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.PreferredStartDate" class="control-label"></label>
                <input asp-for="Company.PreferredStartDate" class="form-control" />
                <span asp-validation-for="Company.PreferredStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Location" class="control-label"></label>
                <textarea asp-for="Company.Location" class="form-control" /></textarea>
                <span asp-validation-for="Company.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.SigningBonus" class="control-label"></label>
                <input asp-for="Company.SigningBonus" class="form-control" />
                <span asp-validation-for="Company.SigningBonus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.IndustryId" class="control-label"></label>
                <select asp-for="Company.IndustryId" class ="form-control" asp-items="ViewBag.IndustryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

